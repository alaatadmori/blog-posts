<UserControl xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="BusyUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <toolkit:BusyIndicator x:Name="busyIndicator">
        <StackPanel Background="White">
            <TextBlock Text="How to Show Busy Indicator When Your Task Has to Run on the UI Thread" FontSize="36" 
FontWeight="Bold" Foreground="Red" TextWrapping="Wrap" 
TextAlignment="Center"/>
            <Button Content="Do some busy work on the UI thread" Width="250" Click="ButtonClick" />
        </StackPanel>
    </toolkit:BusyIndicator>
</UserControl>
